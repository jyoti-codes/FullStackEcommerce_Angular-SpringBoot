CREATE TABLE country (
  id BIGserial NOT NULL,
  code varchar(255) DEFAULT NULL,
  name varchar(255) DEFAULT NULL,
  PRIMARY KEY (id)
);

CREATE TABLE state (
  id bigserial NOT NULL,
  name varchar(255) DEFAULT NULL,
  country_id bigint NOT NULL,
  PRIMARY KEY (id),
  CONSTRAINT country_id FOREIGN KEY (country_id) REFERENCES country (id));
  
  
  
